
<article>

<h3>Edit Blog Post</h3>

 <form ref="uploadForm" id="uploadForm" action="/" method="post" encType="multipart/form-data" class="form new-blog-form">
        <div class="form-group">
        <label for="blog_title">Edit Blog Title:</label>
        <input class="form-input" type="text" id="blog_title" name="blog_title" />{{blog_title}}
        </div>
         <div class="form-group">
        <label for="blog_content">Edit Blog Content:</label>
        <textarea class="form-input" name= "blog_content" type="text" id="blog_content" row="8" cols="80"/>{{blog_content}}</textarea>
        </div>
        <div class="form-group">
        <button class="btn" type="submit">Create Blog</button>
        </div>
   
    <div class="wrapper">
        <button
            data-id="{{blog.id}}"
            class="btn btn-edit"
            id="btn-edit"
                >Update Edit
        </button>
    </div>

    <div class="wrapper">
        <button
                data-id="{{blog.id}}"
                class="btn btn-delete"
                id="btn-delete"
                >Delete
            </button>
        </div>
        
    </form>

</article>

<script src="/js/edit-blog.js"></script>