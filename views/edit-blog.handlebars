
<article>

<h3>Edit Blog Post</h3>

    <form class="form edit-blog-form">
        <div class="form-group">
        <label for="blog-title">Update Blog Title (Created by {{username}} on {{format_date date}}):</label>
        <input class="form-input" type="text" id="blog-title-input" />{{blog_title}}
        </div>
         <div class="form-group">
        <label for="blog-content">Enter Updated Blog Content:</label>
        <textarea class="form-input" name= "blog-content-input" type="text" id="blog-content-input" row="8" cols="80"/>{{blog_content}}</textarea>
        </div>
        <div class="form-group">
        <button class="btn edit-btn" type="submit" data-id="{{blog.id}}">Update Blog</button>
        </div>
         <div class="form-group">
        <button class="btn delete-btn" type="submit" data-id="{{blog.id}}" >Delete Blog</button>
        </div>
    </form>

</article>

<script src="/js/edit-blog.js"></script>