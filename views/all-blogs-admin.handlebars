<!-- Create New blog... -->


<article>

<h3>New Blog Post</h3>

    <form class="form new-blog-form">
        <div class="form-group">
        <label for="blog-title">Enter Blog Title:</label>
        <input class="form-input" type="text" id="blog-title-input" />
        </div>
         <div class="form-group">
        <label for="blog-content">Enter Blog Content:</label>
        <textarea class="form-input" name= "blog-content-input" type="text" id="blog-content-input" row="8" cols="80"/></textarea>
        </div>
        <div class="form-group">
        <button class="btn" type="submit">Create Blog</button>
        </div>
    </form>

    <br>

    <button class="btn" type="submit">NEW POST</button>

</article>

<!-- ... with previous blogs nested beneath -->

{{#if blogs.length}}

<h3>Other Current Blogs</h3>

{{#each blogs as |blog|}}
<article>
    <div class="blog-title row">
        <h4 href="/single-blog/{{blog.id}}">{{blog_title}}</h4>
    </div>

    <div class="blog-user row">
        <p>{{username}} || {{date}}</p>
    </div>

    <div class="blog-content row">
        <p>{{blog_content}}</p>
    </div>

</article>

{{/each}}

{{/if}}


<script src="/js/new-blog.js"></script>