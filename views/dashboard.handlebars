<div class="wrapper">
  <br />
  <div>
    <h3>My Blogs Dashboard:</h3>
  </div>
</div>

<button class="btn" type="submit">
    <a href="/new-blog">NEW BLOG</a>
</button>


<div class="grid">

  {{#each blogs as |blog|}}
    <div id="dashboard-blogs" class="content">
      <section class="card">
        <a href="/blogs/{{id}}">
            <div class="card-body-simple">
            <div>
                <h1>{{blog_title}}</h1>
                <h2>Posted on: {{format_date date}} / By: {{username}}</h2>
                
                <div class="wrapper">
                    <button
                        data-id="{{blog.id}}"
                        class="btn btn-delete"
                        id="btn-delete"
                        >Delete
                    </button>
                </div>

                <div class="wrapper">
                    <button
                        data-id="{{blog.id}}"
                        class="btn btn-edit"
                        id="btn-edit"
                         >Edit
                    </button>
                </div>
            </div>
        </a>

        </div>
      </section>
    </div>
  {{/each}}
</div>



