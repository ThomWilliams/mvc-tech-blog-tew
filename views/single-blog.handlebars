

<h3>Single Selected Blog</h3>

<article>

    <div class="blog-container">
        <div class="blog-title row">
            <h4>{{blog_title}}</h4>
        </div>

        <div class="blog-user row">
            <p>{{username}} || {{date}}</p>
        </div>

        <div class="blog-content row">
            <p>{{blog_content}}</p>
        </div>
    </div>

    <div class="comment-container">
        <form ref="uploadForm" id="uploadForm" action="/" method="post" encType="multipart/form-data" class="form comment-form">
            <div class="form-group">
            <label for="blog_content">Enter Your Comments:</label>
            <textarea class="form-input" type="text" id="comment_content" name="comment_content" row="8" cols="80"/></textarea>
            </div>
            <div class="form-group">
            <button class="btn" type="submit">Add Comment</button>
            </div>
        </form>
    </div>


    {{#if comments.length}}

    <section class="comment"> 
        <p>{{comment_content}}</p>
        <p>{{username}} || {{date_created}}</p>
    
    </section>

    {{/if}}


</article>

<script src="/js/comments.js"></script>


